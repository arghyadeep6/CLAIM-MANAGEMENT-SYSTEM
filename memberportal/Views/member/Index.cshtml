@model IEnumerable<memberportal.Models.memberclaim>

@{ ViewData["Title"] = "View_Claims";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<p>
    <h1 align="right">Welcome @ViewBag.Message</h1>
</p>

<p>
    <a class="btn btn-success" asp-action="Viewbills" align="left">VIEW BILLS</a>
    <a class="btn btn-primary" asp-action="Submit_Claim" align="right">SUBMIT NEW CLAIM</a>
</p>
<br />
<marquee direction="right" bgcolor="white"><h2 align="center">VIEW ALL YOUR CLAIMS HERE</h2></marquee>
<br />
<table class="table" bgcolor="#E5E7E9">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.memberid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.claimid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.billedamount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.claimedamount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.benefitid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.claimstatus)
            </th>
            <th>SPECIFIC CLAIM DESCRIPTION PAGE LINK</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.memberid)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.claimid)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.billedamount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.claimedamount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.benefitid)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.claimstatus)
    </td>
    <td>
        <a class="btn btn-info" asp-controller="member" asp-action="Edit" asp-route-id="@item.claimid">LINK</a>
    </td>
</tr>
}
    </tbody>
</table>
